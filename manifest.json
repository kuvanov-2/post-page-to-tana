{
  "manifest_version": 3,
  "name": "CustomExtension",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "http://*/", "https://*/"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Custom Extension",
    "menus": {
      "openOptions": {
        "title": "Options",
        "contexts": ["browser_action"],
        "onclick": "openOptionsPage"
      }
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
